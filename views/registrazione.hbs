<div class="container">
  <h4 class="text-center bg-success col-sm-12 col-md-8 col-lg-8 my-5 mx-auto">Crea un account</h4>
  <div class="col-sm-12 col-md-8 col-lg-8 m-auto">
  <div class="card my-5">
  <form class="p-5 mb-3" action="/registrazione" method="post"> 
    <div class="form-group">
      <label for="nome">Nome</label>
      <input type="text" class="form-control" name="nome" value="{{nome}}" required>
    </div>
    <div class="form-group">
      <label for="cognome">Cognome</label>
      <input type="text" class="form-control" name="cognome" value="{{cognome}}" required>
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control" name="email" value="{{email}}" required>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" name="password" value="{{password}}" required>
      <small class="form-text text-muted">La password deve avere almeno 8 caratteri.</small>
    </div>
    <div class="form-group">
      <label for="password">Conferma Password</label>
      <input type="password" class="form-control" name="conferma_psw" value="{{conferma_psw}}" required>
    </div>
    <button type="submit" class="btn btn-success">Invia</button>
  </form>
  </div>
  </div>
</div>